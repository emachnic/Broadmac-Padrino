!!! 5
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :charset => "utf-8" }
    %title
      = ["Evan Machnic", @title].compact.join(" => ")
    = stylesheet_link_tag "reset", "application", :media => 'screen'
    = stylesheet_link_tag 'print', :media => 'print'
    = stylesheet_link_tag 'http://code.jquery.com/mobile/1.0a1/jquery.mobile-1.0a1.min.css', :media => 'mobile'
    = javascript_include_tag 'jquery-1.4.4.min.js'
    /
      = javascript_include_tag 'http://code.jquery.com/mobile/1.0a2/jquery.mobile-1.0a2.min.js'
    = yield_content :head
    /[if lt IE 9]
      = javascript_include_tag 'html5'
    = javascript_include_tag "https://www.tungle.me/portal/js/plugins/tungle.mwmWidget.js"
  %body( data-role='page' )
    %header( data-role='header' )
      = link_to image_tag("evan_machnic_logo-nq8.png", :alt => "Evan Machnic Logo", :title => "Evan Machnic Home"), "/"
      %nav
        %ul
          %li
            = link_to "writing", url_for(:posts, :index), :class => is_active?("Writing")
          %li &#47;&#47;
          %li
            = link_to "info", url_for(:info), :class => is_active?("Info")
          %li &#47;&#47;
          %li
            = link_to "resume", url_for(:resume), :class => is_active?("Resume")
          %li &#47;&#47;
          %li
            = link_to "work", url_for(:work, :index), :class => is_active?("Work")
          %li &#47;&#47;
          %li
            = link_to "interact", url_for(:interact), :class => is_active?("Interact")
      .clear
    #main( data-role='content' )
      #content
        = yield
      #sidebar
        %h3 Favorite Sites
        %ul
          %li
            = link_to "A List Apart", "http://www.alistapart.com"
          %li
            = link_to "Railscasts", "http://railscasts.com"
          %li
            = link_to "Ruby on Rails", "http://rubyonrails.org"
          %li
            = link_to "Signal vs. Noise", "http://37signals.com/svn"
          %li
            = link_to "TeachMeToCode", "http://teachmetocode.com"
        %h3 Books I Like
        %figure
          = link_to image_tag("tpp.jpg", :alt => "Pragmatic Programmer Cover", :title => "The Pragmatic Programmer"), "http://pragprog.com/titles/tpp/the-pragmatic-programmer"
          %figcaption
            = link_to "The Pragmatic Programmer: From Journeyman to Master", "http://pragprog.com/titles/tpp/the-pragmatic-programmer"
            %br
            %span by Andrew Hunt and David Thomas
        %figure
          = link_to image_tag("rails_tutorial.png", :alt => "Rails Tutorial Logo", :title => "Rails Tutorial"), "http://railstutorial.org"
          %figcaption
            = link_to "Rails Tutorial", "http://railstutorial.org"
            %br
            %span by Michael Hartl
        %figure
          = link_to image_tag("rework.jpg", :alt => "Rework Cover", :title => "Rework"), "http://37signals.com/rework"
          %figcaption
            = link_to "Rework", "http://37signals.com/rework"
            %br
            %span Jason Fried and David Henemeier Hansson
        /
